{
  "languageserver": {
    "golang": {
      "command": "gopls",
      "rootPatterns": ["go.mod", ".vim/", ".git/", ".hg/"],
      "filetypes": ["go"]
    },
    "clojure-lsp": {
      "command": "clojure-lsp",
      "filetypes": ["clojure", "clojurescript"],
      "rootPatterns": ["shadow-cljs.edn", "project.clj"],
      "additionalSchemes": ["jar", "zipfile"],
      "trace.server": "verbose",
      "initializationOptions": {}
    }
  },
  "coc.preferences.jumpCommand": "tab drop",
  "coc.preferences.enableFloatHighlight": true,
  "coc.preferences.formatOnSaveFiletypes": [
    "css",
    "python",
    "typescript",
    "typescript.tsx",
    "typescriptreact",
    "javascript",
    "javascript.tsx",
    "javascriptreact"
  ],
  "json.format.enable": true,
  "codeLens.enable": true,
  "python.formatting.provider": "black",
  "python.pythonPath": "/Users/nicholasbardy/.pyenv/shims/python",
  "python.venvPath": "~/.pyenv",
  "python.jediEnabled: "false",
  "suggest.enablePreselect": true,
  "suggest.enablePreview": true,
  "suggest.minTriggerInputLength": 0,
  "python.analysis.diagnosticEnabled": true,
  "diagnostic.virtualText": true,
  // "diagnostic.virtualTextPrefix": "üöì",
  "suggest.noselect": false,
  // git integration
  "git.addGlameToVirtualText": true,
  "git.addedSign.text": "üå±",
  "git.removedSign.text": "‚ö∞Ô∏è",
  "diagnostic.warningSign": "üíÖ",
  "suggest.snippetIndicator": "üç¶"
}
